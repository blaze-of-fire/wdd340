<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li> <%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<h2>Account Update</h2>
<form id="updateForm" action="/account/update" method="post">
    <div>
        <div>
            <div>
                <label for="accountFirstname">First name:</label>
                <input type="text" name="account_firstname" id="accountFirstname" required value="<%= account_firstname %>">
                <label for="accountLastname">Last name:</label>
                <input type="text" id="accountLastname" name="account_lastname" required value="<%= account_lastname %>">
                <label for="accountEmail">Email:</label>
                <input type="email" id="accountEmail" name="account_email" required value="<%= account_email %>">
                <input type="hidden" name="account_id" 
                <% if (account_id) { %> value="<%= account_id %>"
                <% } %>>
                <input id="submitBtn" type="submit" value="Update">
            </div>
        </div>
    </div>
</form>

<h2>Change Password</h2>
<form action="/account/password-change" method="post">
    <div>
        <div>
            <div>
                <label for="accountPassword">Password:</label>
                <input type="password" id="accountPassword" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Please enter at least 12 characters with 1 lowercase letter, 1 capital letter, 1 number, and 1 special character." required>
                <input type="hidden" name="account_id" 
                <% if (locals.account_id) { %> value="<%= locals.account_id %>"
                <% } %>>
                <p class="passwordReq">All fields are required and the password must have: 
                <p class="passwordReq">12 characters in length, minimum</p>
                <p class="passwordReq">contain at least 1 capital letter</p>
                <p class="passwordReq">contain at least 1 number</p>
                <p class="passwordReq">contain at least 1 special character</p>
                <input type="submit" value="Change">
            </div>
        </div>
    </div>
</form>
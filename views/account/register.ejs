<% if(title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect("/")
} %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
  <%  }) %>
    </ul>
<% } %>

<form action="/account/register" method="post">
    <div>
        <div>
            <div>
                <label for="account_firstname">First name:</label>
                <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
                <label for="account_lastname">Last name:</label>
                <input type="text" id="accountLastname" name="account_lastname" required value="<%= locals.account_lastname %>">
                <label for="account_email">Email:</label>
                <input type="email" id="accountEmail" name="account_email" required value="<%= locals.account_email %>">
                <label for="account_password">Password:</label>
                <input type="password" id="accountPassword" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Please enter at least 12 characters with 1 lowercase letter, 1 capital letter, 1 number, and 1 special character." required>
                <p class="registerReq">All fields are required and the password must have: 
                <p class="registerReq">12 characters in length, minimum</p>
                <p class="registerReq">contain at least 1 capital letter</p>
                <p class="registerReq">contain at least 1 number</p>
                <p class="registerReq">contain at least 1 special character</p>
                <input type="submit" value="Register">
            </div>
        </div>
    </div>
</form>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect("/")
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li> <%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<h2>Welcome <%= locals.account_firstname %></h2>
<p><a href="/account/update">Manage Account</a></p>
<% if (accountData.account_type == "Employee" || accountData.account_type == "Admin") { %>
<h3 class="libreBakersville">Inventory Management</h3>
<p><a href="/inv">Manage Inventory</a></p>
<% } %>